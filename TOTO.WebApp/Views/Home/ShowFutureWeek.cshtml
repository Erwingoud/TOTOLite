@{
    ViewData["Title"] = "FutureDays";
}
@model Tuple<int, int, Dictionary<DateTime, bool>>

<h1>Future Week Dates</h1>

<form method="get" class="flex flex-col">
    <label for="year" class="mb-2">Year:</label>
    <input type="text" id="year" name="year" value="@Model.Item1" class="border border-gray-300 rounded-md p-2" />
    <label for="weekNumber" class="mb-2">Week Number:</label>
    <input type="text" id="weekNumber" name="weekNumber" value="@Model.Item2" class="border border-gray-300 rounded-md p-2" />
    <input type="submit" value="Show Future Dates" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md mt-4" />
</form>

<table class="table-auto border border-collapse mt-4">
    <thead>
        <tr>
            <th class="border border-collapse border-gray-300 px-4 py-2">Date</th>
            <th class="border border-collapse border-gray-300 px-4 py-2">Holiday</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.Item3)
        {
            var date = entry.Key;
            var isHoliday = entry.Value;
            string highlightClass = isHoliday ? "bg-red-200" : "";

            <tr>
                <td class="border border-collapse border-gray-300 px-4 py-2 @highlightClass">@date.ToString("yyyy-MM-dd")</td>
                <td class="border border-collapse border-gray-300 px-4 py-2">@isHoliday</td>
            </tr>
        }
    </tbody>
</table>
